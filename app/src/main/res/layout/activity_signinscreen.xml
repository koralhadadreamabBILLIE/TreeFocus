<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textEmail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".signinscreen">

    <ImageView
        android:id="@+id/imv"
        android:layout_width="164dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/image_16_10_2025_at_8_28"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="47dp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="none"
        android:ellipsize="middle"
        android:gravity="center"
        android:marqueeRepeatLimit="30"
        android:text="Welcome back! Let's get focused."
        android:textSize="34sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="numberPassword"
        android:marqueeRepeatLimit="90"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btnSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E46EA4"
        android:text="Sign In"
        android:textColorLink="#E7478F"
        android:visibility="visible"
        app:rippleColor="#E46EA4"
        tools:visibility="visible" />

</LinearLayout>